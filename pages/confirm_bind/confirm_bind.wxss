.container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 90%;
  height: 50%;
  border-radius: var(--br-d);
  box-shadow: 0 0 10rpx 0 #e0e0e0;
  box-sizing: border-box;
}

.card::before {
  content: '';
  display: table;
  height: 0;
}

.user_avatar {
  display: flex;
  justify-content: center;
  width: 100%;
  box-sizing: border-box;
}

.user_avatar>image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.user_nick {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.user_nick>text {
  letter-spacing: 6rpx;
  font-family: 'book';
}

.accept_btn {
  width: 90%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: var(--br-d);
  background-color: #1a875f;
}

.accept_btn>text {
  letter-spacing: 6rpx;
  font-family: 'book';
  color: #ffffff;
}

